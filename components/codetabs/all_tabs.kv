#         pos: root.pos
#         text: root.custom_tab_name
#         markup: True
#         on_ref_press: app.close_tabsT(*args)


<CustomTabs>:
    id: custom_tab
    text: f"{root.custom_tab_name} [ref=n]✖[/ref]"
    font_name: "./assets/fonts/seguiemj.ttf"
    on_ref_press: app.close_tab(self, custom_tab)
    markup: True
    background_color: "#31044e"
    background_normal: ''

    # code mechanism

    BoxLayout:
        ScrollView:
            do_scroll_y: True
            do_scroll_x: True
            bar_width: "15dp"
            scroll_type: ['bars', 'content']
            bar_color: "purple"
            effect_cls: "ScrollEffect"
            BoxLayout:
                size_hint_y: None
                height: self.minimum_height
                GridLayout:
                    cols: 1
                    spacing: "4.1dp"
                    padding: ('0dp', '6dp', '0dp', '0dp')
                    id: code_line_counter_container
                    size_hint_x: None
                    width: "37dp"

                    
                CodeInput:
                    id: code_input
                    text: root.code_text
                    # set_cursor: "ibeam"
                    do_wrap: False
                    font_size: "18sp"
                    cursor: (3,1)
                    cursor_width: "3sp"
                    allow_copy: True
                    selection_color: 1, 136/255, 237/255, .4
                    size_hint_y: None
                    text_size: self.width, None
                    height: self.minimum_height
                    # foreground_color: (1,0,0,1)
                    background_color: (1,1,1,1) #"#302d2e"
                    border_color: "#f88fbd"
                    on_text: root._on_text(self)
                    
# for welcome tab
<RoundedBoxLabel@Label>:
    size_hint_y: None
    height: "40dp"
    markup: True
    font_size: 18
    color: "blue"
    size_hint_x: .4
    pos_hint: {'center_x': .5}
    font_name: "./assets/fonts/seguiemj.ttf"
    canvas.before:
        Color:
            rgba: (208/255, 5/255, 5/255,1)
        Line:
            width: 1.1
            rounded_rectangle: (self.x, self.y, self.width, self.height, 10)

<WelcomeTab>:
    #:import random random
    id: welcome_tab
    text: '+'
    background_normal: ''
    background_color: [60/255, 48/255, 72/255, 1]
    BoxLayout:
        canvas.before:
            Color:
                rgba: (208/255, 187/255, 224/255,.3)
            Rectangle:
                pos: self.pos
                size: self.size
        BoxLayout:
            orientation: "vertical"
            spacing: 20
            Label:
                text: root.greetings
                font_name: "./assets/fonts/seguiemj.ttf"
                color: "black"
                halign: "center"
                size_hint_y: None
                height: "70dp"
                text_size: self.size
                font_size: "33sp"

            RoundedBoxLabel:                  
                text: "[ref=n]Create New File[/ref]"
                text_size: self.size
                font_size: "18sp"
                halign: "center"
                valign: "middle"
                on_ref_press: 
                    root.create_new_file_popup()
                    colors = ["green", "yellow", "purple", "red"]
                    self.color = colors[random.randint(0,3)]

            RoundedBoxLabel:                  
                text: "[ref=n]Create folder[/ref]"
                text_size: self.size
                font_size: "18sp"
                halign: "center"
                valign: "middle"
                on_ref_press: print("fjil")

            RoundedBoxLabel:
                text: "[ref=n]Drag and Drop[/ref]"
                text_size: self.size
                font_size: "18sp"
                halign: "center"
                valign: "middle"
                on_ref_press: print("drag")

            Widget:
        Button:
            text: "Close"
            background_color: 'red'
            background_normal: ""
            size_hint: None, None
            height: 30
            width: 42
            pos_hint: {'center_x': .975, 'center_y': .971}
            on_press: 
                app.close_tab(self, welcome_tab)


<ImageTabs>:
    id: media_tab
    text: f"{root.image_tab_name} [ref=n]✖[/ref]"
    font_name: "./assets/fonts/seguiemj.ttf"
    on_ref_press: app.close_tab(self, media_tab)
    markup: True
    BoxLayout:
        orientation:'vertical'
        size_hint: .8,.8
        pos_hint: {'centerX': .5, 'center_y': .5}
        Image:
            source: root.image_source
            
<MediaTabs>:
    id: media_tab
    text: f"{root.media_tab_name} [ref=n]✖[/ref]"
    font_name: "./assets/fonts/seguiemj.ttf"
    on_ref_press: app.close_tab(self, media_tab)
    markup: True
    BoxLayout:
        orientation:'vertical'
        size_hint: .8,.8
        pos_hint: {'centerX': .5, 'center_y': .5}
        VideoPlayer:
            source: root.media_source
            state: "pause"
