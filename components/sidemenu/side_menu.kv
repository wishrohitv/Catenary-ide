<SideMenu>:
    orientation: "vertical"
    padding: 5
    spacing: 5
    canvas:
        Color:
            rgba: 75/255, 53/255, 78/255, 1
        Rectangle:
            size: self.size
            pos: self.pos
    canvas.after:
        Color:
            rgba: 60/255, 48/255, 72/255, 1
        Line:
            width: 2
            rounded_rectangle: (self.x, self.y, self.width, self.height, 4)
    size_hint: None, 1
    width: "45dp"
    LeftTabs:
        pos_hint: {'center_y': .7}
        group: "side_tabs"
        size_hint: 1, None
        height: "50dp"
        source: "assets/navigations/document-files-white.png" if self.state == "normal" else "assets/navigations/document-files-pink.png" 
        on_press: 
            print("sS")
            print(self.state)

    LeftTabs:
        source: "assets/navigations/magnifying-glass-white.png" if self.state == "normal" else "assets/navigations/magnifying-glass-pink.png" 
        group: "side_tabs"
        size_hint: 1, None
        height: "50dp"
        text: "files"

    Widget:
    LeftTabs:
        source: "assets/navigations/terminal-white.png" if self.state == "normal" else "assets/navigations/terminal-pink.png" 
        group: "side_tabs"
        size_hint: 1, None
        height: "50dp"
        text: "files"
    LeftTabs:
        source: "assets/navigations/info-white.png" if self.state == "normal" else "assets/navigations/info-pink.png" 
        group: "side_tabs"
        size_hint: 1, None
        height: "50dp"
        text: "files"
        on_press: root.app_info_open()
                    

<SideMenuTabWindows>:
    orientation: 'vertical'
    canvas:
        Color:
            rgba: (99/255, 166/255, 242/255, 0.127)
        Rectangle:
            pos: self.pos
            size: self.size
    size_hint: 1, 1
    ScrollView:
        do_scroll_x: False
        do_scroll_y: True
        BoxLayout:
            size_hint_y: None
            height: self.minimum_height
            orientation: "vertical"
            size_hint: 1, 1
            # width: "240dp"
            BoxLayout:
                padding: "5dp"
                size_hint_y: None
                height: self.minimum_height
                Explorer:
                
            FileNameLabel:
            FileNameLabel:
            FileNameLabel:
            Widget:

<FileNameLabel@ToggleButtonBehavior+Label>:
    canvas.before:
        Color:
            rgba: (0, 0, 0, 0) if self.state == "normal" else (75/255, 53/255, 78/255, .5)
        RoundedRectangle:
            size: self.size
            pos: self.pos
            radius: [5,]
    padding: "20dp"
    group: "file_and_folders"
    text: "main.py"
    size_hint: 1, None
    height: "34dp"
    # on_release: print(self.state)

<Explorer@Label>:
    canvas.before:
        Color:
            rgba:(75/255, 53/255, 78/255, 1)
        Line:
            width: .4
            rounded_rectangle: (self.x, self.y, self.width, self.height, 5)
    text: "WORKSPACE"
    size_hint: 1, None
    font_name: r'assets\fonts\Poppins-BoldItalic.ttf'
    height: "34dp"