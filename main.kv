Screen:
    # parent box
    on_kv_post:
        #:import TopHeader components.topheader.top_header.TopHeader
        #:import SideMenu components.sidemenu.side_menu.SideMenu
        #:import SideMenuTabWindows components.sidemenu.side_menu.SideMenuTabWindows
        #:import WelcomeTab components.codetabs.all_tabs.WelcomeTab
        #:import Terminal components.terminal.py_terminal.Terminal

    BoxLayout:
        orientation:'vertical'
        # header
        BoxLayout:
            size_hint_y: None
            height: self.minimum_height
            TopHeader:
        
        # child box for spliters
        BoxLayout:
            orientation: "horizontal"
            BoxLayout:
                size_hint_x: None
                width: self.minimum_width
                SideMenu:
            BoxLayout:
                orientation:'vertical'
                BoxLayout:
                    id: tab_container
                    # side menu Tab
                    Splitter:
                        id: splliter_sidemenutabswindows
                        size_hint_x: .4
                        # width: self.minimum_width
                        sizable_from: "right"
                        strip_size : '3pt'
                        min_size: "145dp"
                        max_size: "350dp"
                        SideMenuTabWindows:
                    
                    # code panels
                    BoxLayout:
                        TabbedPanel: # TabbedPanel:
                            id: all_tabs_bar
                            size_hint: 1, 1
                            pos_hint: {'center_x': .5, 'center_y': .5}
                            do_default_tab: False
                            tab_size_hint_x: None
                            tab_height:"30dp"
                            # tabs: 
                            WelcomeTab:
                BoxLayout:
                    id: terminal_place
                    size_hint_y: None
                    # height: self.minimum_height
                    height: "150dp"
                    Splitter:
                        strip_size : '3pt'
                        sizable_from: "top"
                        Terminal:

                    

        # bottom bar
        BoxLayout:
            orientation:'horizontal'
            size_hint_y: None
            height: "25dp"
            canvas.before:
                Color:
                    rgba: (99/255, 166/255, 242/255, 0.327)
                Rectangle:
                    pos: self.pos
                    size: self.size
            # BottomHeader:
            Label:
                id: language
                text: "plain text" #root.language
            Label:
                id: cursor_pos
                text: 'Ln , Col '
            Label:
                id: selected_text
                text: ""
