#:import TopHeader components.topheader.top_header.TopHeader
#:import SideMenu components.sidemenu.side_menu.SideMenu
#:import SideMenuTabWindows components.sidemenu.side_menu.SideMenuTabWindows
#:import WelcomeTab components.codetabs.all_tabs.WelcomeTab
#:import Terminal components.terminal.py_terminal.Terminal
Screen:
    # parent box
    BoxLayout:
        orientation:'vertical'
        # header
        BoxLayout:
            size_hint_y: None
            height: self.minimum_height
            TopHeader:
        
        # child box for spliters
        BoxLayout:
            orientation: "horizontal"
            BoxLayout:
                size_hint_x: None
                width: self.minimum_width
                SideMenu:
            BoxLayout:
                orientation:'vertical'
                BoxLayout:
                    id: tab_container
                    # side menu Tab
                    Splitter:
                        id: splliter_sidemenutabswindows
                        size_hint_x: .4
                        # width: self.minimum_width
                        sizable_from: "right"
                        strip_size : '3pt'
                        min_size: "145dp"
                        max_size: "350dp"
                        SideMenuTabWindows:
                    
                    # code panels
                    BoxLayout:
                        TabbedPanel: # TabbedPanel:
                            id: all_tabs_bar
                            size_hint: 1, 1
                            pos_hint: {'center_x': .5, 'center_y': .5}
                            do_default_tab: False
                            tab_size_hint_x: None
                            tab_height:"30dp"
                            # tabs: 
                            WelcomeTab:
                BoxLayout:
                    id: terminal_place
                    size_hint_y: None
                    canvas.after:
                        Color:
                            rgba: 60/255, 48/255, 72/255, 1
                        Line:
                            width: 2
                            rounded_rectangle: (self.x, self.y, self.width, self.height, 4)
                    # height: self.minimum_height
                    height: "100dp"
                    Splitter:
                        strip_size : '3pt'
                        sizable_from: "top"
                        Terminal:
                    

        # bottom bar
        BoxLayout:
            orientation:'horizontal'
            size_hint_y: None
            height: "25dp"
            canvas.before:
                Color:
                    rgba: (99/255, 166/255, 242/255, 0.327)
                Rectangle:
                    pos: self.pos
                    size: self.size
            Label:
                text: "python"
            Label:
                text:'Ln 33, Col 29'
